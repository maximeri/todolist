<ul class="list-group">
  {{#each todos}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto mr-auto">
        <input type="checkbox" name="isDone" {{#if this.isDone}} checked{{/if}} disabled>
        {{this.name}}
        <a href="./todos/{{ this._id }}" class="btn btn-secondary">detail</a>
        <a href="./todos/{{ this._id }}/edit" class="btn btn-success">edit</a>
        <form action="./todos/{{ this._id }}/?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>